<div class="modal" id="modal-book">
  <div class="modal__close">&times;</div>
  <h2 class="modal__heading">Забронируйте<br>номер</h2>
  <form action="{{ site.theme.link }}/routes/send_form.php" class="form modal__form">
    <label class="form__row modal__form-row">
      <span class="form__caption">Имя</span>
      <input
          type="text"
          name="name"
          class="form__input"
          placeholder="Введите Ваше имя"
          data-required="true"
      >
    </label>
    <label class="form__row modal__form-row">
      <span class="form__caption">Номер телефона</span>
      <input
          type="tel"
          name="phone"
          class="form__input"
          autocomplete="off"
          data-required="true"
      >
    </label>
    <label class="form__row modal__form-row">
      <span class="form__caption">E-mail</span>
      <input
          type="text"
          name="email"
          class="form__input"
          placeholder="example@mail.com"
          data-required="true"
          data-validation-type="email"
      >
    </label>
    <label class="form__row modal__form-row">
      <span class="form__caption">Сообщение</span>
      <textarea
          name="message"
          class="form__input form__input_textarea"
          rows="3"
      ></textarea>
    </label>
    <label class="form__row modal__form-row">
      <div class="g-recaptcha" data-sitekey="6Le0C3YUAAAAAAk8SMvzJh5L4pdqKRHHiULvEDxx"></div>
    </label>
    <input type="submit" class="button button_size_auto form__submit" value="Забронировать">
  </form>
</div>
