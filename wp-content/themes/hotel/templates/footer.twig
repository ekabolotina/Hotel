<footer class="footer">
  <h2>{{ options.global_footer_heading }}</h2>

  {% if options.global_footer_list|length %}
    <ul>
      {% for item in options.global_footer_list %}
        <li>
          <img src="{{ TimberImage(item.img).src }}"><br>
          {{ item.text }}
        </li>
      {% endfor %}
    </ul>
  {% endif %}
</footer>

<div class="modal" id="modal-book">
  <div class="modal__close">&times;</div>
  <h2 class="modal__heading">Забронируйте<br>номер</h2>
  <form action="" class="form modal__form">
    <label class="form__row">
      <span class="form__caption">Номер телефона</span>
      <input type="text" name="phone" class="form__input form__input_mask" data-mask="+7 (999) 999 99-99" placeholder="+7 (">
    </label>
    <input type="submit" class="button button_size_auto form__submit" value="Забронировать">
  </form>
</div>
